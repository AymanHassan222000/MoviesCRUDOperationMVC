@model MovieFormeViewModel

@{
    ViewData["Title"] = "Movie Form";
}

<h2>@(Model.Id > 0 ? "Edit" : "Create") Movie</h2>
<hr />

<section class="row justify-content-between align-items-center" >
    <div class="col-md-4">
        <form method="post" asp-action="@(Model.Id > 0 ? "Edit" : "Create")" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id"/>
            <div class="form-group mb-3">
                <label class="text-muted mb-3" asp-for="Title"></label>
                <input class="form-control" asp-for="Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div> 
            <div class="form-group mb-3">
                <label class="text-muted mb-3" asp-for="@Model.GenreId"></label>
                <select class="form-select" asp-for="@Model.GenreId" asp-items="@(new SelectList(Model.Genres,"Id","Name"))">
                    <option value="0">Select Genre</option>
                </select>
                <span asp-validation-for="@Model.GenreId" class="text-danger"></span>
            </div>
            <div class="form-group w-50 mb-3">
                <label class="text-muted mb-3" asp-for="Year"></label>
                <input class="form-control" asp-for="Year" value="@(Model.Year > 0 ? Model.Year : string.Empty)"/>
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group w-50 mb-3">
                <label class="text-muted mb-3" asp-for="Rate"></label>
                <input class="form-control" asp-for="Rate" value="@(Model.Rate > 0 ? Model.Rate : string.Empty)"/>
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            <div class="form-group w-100 mb-3">
                <label class="text-muted mb-3" asp-for="StoryLine"></label>
                <textarea class="form-control" asp-for="StoryLine" rows="5"></textarea>
                <span asp-validation-for="StoryLine" class="text-danger"></span>
            </div>
            <div>
                <div class="input-group mb-3">
                    <input asp-for="Poster" type="text" class="form-control" id="PosterName" placeholder="Select Poster..." readonly>
                    <label class="btn btn-outline-secondary">
                        Browse <input type="file" asp-for="Poster" id="Poster" hidden>
                    </label>
                </div>
                <span asp-validation-for="Poster" class="text-danger"></span>
            </div>
            <div class="mt-4">
                <button class="btn btn-primary me-2 px-5">Save</button>
                <a asp-action="Index" class="btn btn-outline-secondary px-5">Cancel</a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <div id="poster-container" class="@(Model.Id > 0 ? string.Empty : "d-none")">
            <img src="@(Model.Id > 0 ? $"data:image/*;base64,{Convert.ToBase64String(ViewBag.Poster)}" : string.Empty)" alt="Poster" class="img-thumbnail"/>
        </div>
    </div>
</section>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('#Poster').on('change', function () {
                var selectedFile = this.files.length > 0 ? this.files[0].name : "No file chosen";
                $('#PosterName').val(selectedFile); // Update the input field
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            $('#Poster').on('change', function () {
                var selectedFile = this.files.length > 0 ? this.files[0].name : "No file chosen";
                $('#PosterName').val(selectedFile); // Update file name input

                // Show Image Preview
                if (this.files.length > 0) {
                    var image = window.URL.createObjectURL(this.files[0]); // Fix the error
                    $('#poster-container').removeClass('d-none'); // Show image
                    $('#poster-container img').attr('src', image); // Set image preview
                } else {
                    $('#poster-container').addClass('d-none'); // Hide if no file
                    $('#poster-container img').attr('src', '');
                }
            });
        });


        $('#Year').datepicker({
            format:'yyyy',
            viewMode:'years',
            minViewMode:'years',
            autoclose:true,
            startDate: new Date('1950,01,01'),
            endDate:new Date()
        });
    </script>
}
