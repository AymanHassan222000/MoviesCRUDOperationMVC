@model IEnumerable<Movie>
@{
    ViewData["Title"] = "Movies";
}


<h2>
    <i class="bi bi-film"></i>
    Movies
</h2>
<hr />
<a class="btn btn-primary" asp-action="Create">
    <i class="bi bi-plus"></i>
    Add Movie
</a>
<div class="mt-4">
    @if (!Model.Any())
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            No Movies was found!
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var movie in Model)
            {
                <div class="col-10">
                    <div class="card mb-3">
                        <div class="row g-0">
                            <div class="col-md-2 poster" style="background-image:url(data:image\/*;base64,@(Convert.ToBase64String(movie.Poster)))">
                            </div>
                            <div class="col-md-10">
                                <div class="card-body d-flex flex-column justify-content-between h-100">
                                    <div>
                                        <h5 class="card-title">@movie.Title</h5>
                                        <p class="card-text text-justify">@(movie.StoryLine.Length > 500 ? $"{movie.StoryLine.Substring(0, 500)}..." : movie.StoryLine)</p>
                                    </div>
                                    <div class="d-flex align-content-center justify-content-between mt-3">
                                        <div class="mb-0">
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <small class="text-body-secondary">@movie.Rate?.ToString("0.0")</small>
                                        </div>
                                        <div>
                                            <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-outline-secondary">
                                                <i class="bi bi-camera-reels"></i>
                                                Details
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                                Edit
                                            </a>
                                            <a href="javascript:;" class="btn btn-danger js-delete" data-id="@movie.Id">
                                                <i class="bi bi-trash"></i>
                                                Delete
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function(){
            $('.js-delete').on('click',function(){
                var btn = $(this);

                bootbox.confirm({
                message: "are you sure that you need to remove this movie?",
                    buttons: {
                        confirm: {
                            label: 'Yes',
                            className: 'btn-danger'
                        },
                        cancel: {
                            label: 'No',
                            className: 'btn-outline-secondary'
                        }
                    },
                    callback: function (result) {
                        
                        if(result){
                            $.ajax({
                                url:'/Movies/Delete/' + btn.data('id'),
                                success:function(){
                                    var movieContainer = btn.parents('.col-10');
                                    movieContainer.addClass('animate__animated animate__zoomOut');

                                    setTimeout(function(){
                                        movieContainer.remove();
                                    },1000);

                                    toastr.success('Movie Deleted Success');
                                },
                                error:function(){
                                    toastr.error('somthing went wrong!');
                                },
                            });
                        }
                    }
                });


            });
        });
    </script>
}