@model Movie

@{
    ViewData["Title"] = Model.Title;
}

<div class="row justify-content-between mt-60-px">
    <div class="col-md-4 overflow-hidden ">
            <img src="data:image/*;base64,@(Convert.ToBase64String(Model.Poster))" class="img-thumbnail" style="border-radius:10px;" title="@Model.Title"/>
    </div>
    <div class="col-md-7">
        <div class="d-flex justify-content-between align-items-center">
            <h3>@Model.Title</h3>
            <span>
                <i class="bi bi-star-fill text-warning"></i>
                <span class="text-muted">@(Model.Rate?.ToString("F1") ?? "0.0")</span>
            </span>
        </div>

        <div class="mb-3">
            <span class="text-muted me-3" >
                <i class="bi bi-calendar-week"></i>
                @Model.Year
            </span>
            <span class="text-muted">
                <i class="bi bi-film"></i>
                @Model.Genre.Name
            </span>
        </div>
        <div>
            <p class="text-justify">@Model.StoryLine</p>
        </div>
    </div>
</div>

 